<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".corner.male.MaleDetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:background="#FFD54F"
        android:focusable="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp">

        <ImageView
            android:id="@+id/furniture_details_image_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/ts1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/furniture_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:layout_gravity="start"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/furniture_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:layout_gravity="start"
        android:textStyle="normal"/>
    <TextView
        android:id="@+id/furniture_details_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:layout_gravity="start"
        android:textStyle="normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/furniture_minus_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/furniture_input_edit_text"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:maxLength="2"
            android:text="0"/>
        <Button
            android:id="@+id/furniture_plus_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/furniture_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/male_order_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place order"
        android:textSize="20sp"
        android:textStyle="normal"
        android:background="#2E7D32"
        android:textColor="@android:color/white"/>


</LinearLayout>