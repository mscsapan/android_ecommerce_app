<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/male_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#FFD54F"
    android:foreground="?android:selectableItemBackground"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="8">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/kids_corner_image"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:padding="6dp"
                android:src="@drawable/ts1"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">

            <TextView
                android:id="@+id/kids_corner_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:text="ID: Male-001T"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kids_corner_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kids_corner_id"
                android:layout_marginTop="5dp"
                android:text="Bangladesh"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kids_corner_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kids_corner_title"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:text="Price: 400BDT"
                android:textSize="23sp"
                android:textStyle="normal" />

        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>